<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="CENTER" spacing="20.0" styleClass="bodybg" stylesheets="@fxmlStyle/backgroudStyle.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.SettingsController">
   <children>
      <Label fx:id="titleLabel" text="%label.settings_title">
         <font>
            <Font name="NeuzeitGro-Bol" size="24.0" />
         </font>
      </Label>
      <Button fx:id="addDocumentButton" mnemonicParsing="false" text="%button.add_document">
         <font>
            <Font name="NeuzeitGro-Bol" size="12.0" />
         </font>
      </Button>
      <Button fx:id="manageDocumentsButton" mnemonicParsing="false" text="%button.manage_documents">
         <font>
            <Font name="NeuzeitGro-Bol" size="12.0" />
         </font>
      </Button>
      <Button fx:id="customerVisitsButton" mnemonicParsing="false" text="%button.customer_visits">
         <font>
            <Font name="NeuzeitGro-Bol" size="12.0" />
         </font>
      </Button>
      <Button fx:id="changePasswordButton" mnemonicParsing="false" text="%button.change_password">
         <font>
            <Font name="NeuzeitGro-Bol" size="12.0" />
         </font>
      </Button>
      <Button fx:id="editCustomerButton" mnemonicParsing="false" text="%button.edit_customer">
         <font>
            <Font name="NeuzeitGro-Bol" size="12.0" />
         </font>
      </Button>
      <Button fx:id="managePositionsButton" mnemonicParsing="false" text="%button.manage_positions">
         <font>
            <Font name="NeuzeitGro-Bol" size="12.0" />
         </font>
      </Button>
      <Button fx:id="attendanceManagementButton" mnemonicParsing="false" text="%button.attendance_management">
         <font>
            <Font name="NeuzeitGro-Bol" size="12.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" mnemonicParsing="false" style="-fx-background-color: red; -fx-text-fill: white;" text="%button.exit">
         <font>
            <Font name="NeuzeitGro-Bol" size="12.0" />
         </font>
      </Button>
      <Button fx:id="backButton" mnemonicParsing="false" text="%button.back">
         <font>
            <Font name="NeuzeitGro-Bol" size="12.0" />
         </font>
      </Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
