<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.CustomerVisitsController">
    <children>
        <Label fx:id="titleLabel" text="Návštevy zákazníkov">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label text="Dátum:" />
                <DatePicker fx:id="datePicker" />
            </children>
        </HBox>
        <TableView fx:id="visitsTable" editable="true" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Meno" />
                <TableColumn fx:id="surnameColumn" prefWidth="150.0" text="Priezvisko" />
                <TableColumn fx:id="startColumn" prefWidth="100.0" text="Príchod" />
                <TableColumn fx:id="endColumn" prefWidth="100.0" text="Odchod" />
            </columns>
            <VBox.margin>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </VBox.margin>
        </TableView>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="addVisitButton" mnemonicParsing="false" text="Pridať návštevu" />
                <Button fx:id="backButton" mnemonicParsing="false" text="Späť" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
