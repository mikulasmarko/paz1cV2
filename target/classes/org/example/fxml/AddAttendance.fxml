<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.AddAttendanceController">
   <children>
      <Label text="Pridať záznam">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <VBox spacing="5.0">
         <children>
            <Label text="Zamestnanec:" />
            <ComboBox fx:id="personComboBox" prefWidth="300.0" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Dátum:" />
            <DatePicker fx:id="datePicker" prefWidth="300.0" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Príchod (HH:mm):" />
            <TextField fx:id="startField" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Odchod (HH:mm):" />
            <TextField fx:id="endField" />
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" text="Uložiť" />
            <Button fx:id="backButton" mnemonicParsing="false" text="Späť" />
         </children>
      </HBox>
      <Label fx:id="statusLabel" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
