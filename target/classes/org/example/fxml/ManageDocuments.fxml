<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="CENTER" spacing="20.0" styleClass="bodybg" stylesheets="@fxmlStyle/backgroudStyle.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.ManageDocumentsController">
   <children>
      <Label fx:id="titleLabel" text="Správa dokumentov">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TableView fx:id="documentsTable" prefHeight="400.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="nameColumn" prefWidth="250.0" text="Názov" />
          <TableColumn fx:id="validFromColumn" prefWidth="100.0" text="Platnosť od" />
          <TableColumn fx:id="validToColumn" prefWidth="100.0" text="Platnosť do" />
          <TableColumn fx:id="languageColumn" prefWidth="50.0" text="Jazyk" />
        </columns>
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </TableView>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="deleteButton" mnemonicParsing="false" style="-fx-background-color: red; -fx-text-fill: white;" text="Vymazať" />
            <Button fx:id="backButton" mnemonicParsing="false" text="Späť" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
