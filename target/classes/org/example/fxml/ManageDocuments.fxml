<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="CENTER" spacing="20.0" styleClass="bodybg" stylesheets="@fxmlStyle/backgroudStyle.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.ManageDocumentsController">
   <children>

      <Label fx:id="titleLabel" text="%label.manage_documents_title">
         <font>
            <Font name="NeuzeitGro-Bol" size="24.0" />
         </font>
      </Label>
      <TableView fx:id="documentsTable" prefHeight="400.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="50.0" text="%column.id" />
          <TableColumn fx:id="nameColumn" prefWidth="250.0" text="%column.name" />
          <TableColumn fx:id="validFromColumn" prefWidth="100.0" text="%column.valid_from" />
          <TableColumn fx:id="validToColumn" prefWidth="100.0" text="%column.valid_to" />
          <TableColumn fx:id="languageColumn" prefWidth="50.0" text="%column.language" />
        </columns>
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </TableView>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="deleteButton" mnemonicParsing="false" style="-fx-background-color: red; -fx-text-fill: white;" text="%button.delete">
               <font>
                  <Font name="NeuzeitGro-Bol" size="12.0" />
               </font>
            </Button>
            <Button fx:id="backButton" mnemonicParsing="false" text="%button.back">
               <font>
                  <Font name="NeuzeitGro-Bol" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
