<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="TOP_CENTER" spacing="20.0" styleClass="bodybg" stylesheets="@fxmlStyle/backgroudStyle.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.AttendanceManagementController">
   <children>
      <Label fx:id="titleLabel" text="%label.attendance_title">
         <font>
            <Font name="NeuzeitGro-Bol" size="30.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label fx:id="selectMonthLabel" text="%label.select_month">
               <font>
                  <Font name="NeuzeitGro-Bol" size="12.0" />
               </font>
            </Label>
            <DatePicker fx:id="monthPicker" />
            <Button fx:id="refreshButton" mnemonicParsing="false" text="%button.refresh">
               <font>
                  <Font name="NeuzeitGro-Bol" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <TableView fx:id="attendanceTable" editable="true" prefHeight="400.0" prefWidth="800.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="150.0" text="%column.customer_name" />
          <TableColumn fx:id="surnameColumn" prefWidth="150.0" text="%column.surname" />
            <TableColumn fx:id="dayColumn" prefWidth="100.0" text="%column.day" />
            <TableColumn fx:id="startColumn" prefWidth="100.0" text="%column.arrival" />
            <TableColumn fx:id="endColumn" prefWidth="100.0" text="%column.departure" />
        </columns>
      </TableView>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="generatePdfButton" mnemonicParsing="false" text="%button.generate_pdf">
               <font>
                  <Font name="NeuzeitGro-Bol" size="12.0" />
               </font>
            </Button>
            <Button fx:id="addRecordButton" mnemonicParsing="false" text="%button.add_record">
               <font>
                  <Font name="NeuzeitGro-Bol" size="12.0" />
               </font>
            </Button>
            <Button fx:id="deleteRecordButton" mnemonicParsing="false" text="%button.delete_record">
               <font>
                  <Font name="NeuzeitGro-Bol" size="12.0" />
               </font>
            </Button>
            <Button fx:id="backButton" mnemonicParsing="false" text="%button.back">
               <font>
                  <Font name="NeuzeitGro-Bol" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Label fx:id="statusLabel">
         <font>
            <Font name="NeuzeitGro-Bol" size="12.0" />
         </font>
      </Label>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
