<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="CENTER" spacing="20.0" styleClass="bodybg" stylesheets="@fxmlStyle/backgroudStyle.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.AttendanceController">
   <children>
      <Label text="Dochádzkový systém">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Label fx:id="welcomeLabel" text="Vitajte">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      
      <Button fx:id="arrivalButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" text="Príchod" />
      <Button fx:id="departureButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" text="Odchod" />
      
      <Button fx:id="logoutButton" mnemonicParsing="false" text="Odhlásiť" />
      <Label fx:id="statusLabel" />
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>
