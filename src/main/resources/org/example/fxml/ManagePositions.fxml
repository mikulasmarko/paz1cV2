<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.ManagePositionsController">
   <children>
      <Label text="Spravovať pracovné pozície">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      
      <ListView fx:id="positionListView" prefHeight="200.0" prefWidth="300.0" maxWidth="400.0" />
      
      <VBox alignment="CENTER" spacing="10.0" maxWidth="400.0">
         <children>
            <TextField fx:id="newPositionField" promptText="Nová pozícia" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="addButton" mnemonicParsing="false" text="Pridať" />
                  <Button fx:id="deleteButton" mnemonicParsing="false" text="Vymazať označené" />
               </children>
            </HBox>
         </children>
      </VBox>

      <Button fx:id="backButton" mnemonicParsing="false" text="Späť" />
      <Label fx:id="statusLabel" />
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
