<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="CENTER" spacing="15.0" styleClass="bodybg" stylesheets="@fxmlStyle/backgroudStyle.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.CustomerSearchController">
   <children>
      <Label text="Vyhľadávanie zákazníka">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="searchField" maxWidth="400.0" promptText="Meno, Priezvisko alebo Email" />
      <TableView fx:id="resultsTable" maxWidth="600.0" prefHeight="300.0">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Meno" />
          <TableColumn fx:id="surnameColumn" prefWidth="150.0" text="Priezvisko" />
          <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
        </columns>
      </TableView>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" text="Späť" />
            <Button fx:id="editButton" mnemonicParsing="false" text="Upraviť" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
