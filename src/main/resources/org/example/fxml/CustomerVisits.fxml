<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="CENTER" spacing="20.0" styleClass="bodybg" stylesheets="@fxmlStyle/backgroudStyle.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.CustomerVisitsController">
    <children>
        <Label fx:id="titleLabel" text="%label.customer_visits_title">
            <font>
                <Font name="NeuzeitGro-Bol" size="24.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label fx:id="dateLabel" text="%label.date">
               <font>
                  <Font name="NeuzeitGro-Bol" size="12.0" />
               </font></Label>
                <DatePicker fx:id="datePicker" />
            </children>
        </HBox>
        <TableView fx:id="visitsTable" editable="true" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="150.0" text="%column.name" />
                <TableColumn fx:id="surnameColumn" prefWidth="150.0" text="%column.surname" />
                <TableColumn fx:id="startColumn" prefWidth="100.0" text="%column.start" />
                <TableColumn fx:id="endColumn" prefWidth="100.0" text="%column.end" />
            </columns>
            <VBox.margin>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </VBox.margin>
        </TableView>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="refreshButton" mnemonicParsing="false" text="%button.refresh">
               <font>
                  <Font name="NeuzeitGro-Bol" size="12.0" />
               </font></Button>
                <Button fx:id="addVisitButton" mnemonicParsing="false" text="%button.add_visit">
               <font>
                  <Font name="NeuzeitGro-Bol" size="12.0" />
               </font></Button>
                <Button fx:id="backButton" mnemonicParsing="false" text="%button.back">
               <font>
                  <Font name="NeuzeitGro-Bol" size="12.0" />
               </font></Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
